<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.vasekric.beetletrack" >

    <uses-permission
        android:name="android.permission.INTERNET"
        android:required="true" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProjectDetails" >
        </activity>
        <activity android:name=".IssueList" >
        </activity>
        <activity android:name=".IssueDetail" >
        </activity>
        <activity android:name=".CreateIssue" >
        </activity>
        <activity
            android:name=".SideNav"
            android:label="@string/title_activity_side_nav"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
